@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu OnSourceSelected="HandleOnSourceSelectedAsync"
                 OnFeedSelected="HandleOnFeedSelectedAsync"
                 OnArticleSelected="HandleOnArticleSelectedAsync" />
    </div>

    <div class="main">
        <CascadingValue Name="SelectedSource" Value="_selectedSource">
            <CascadingValue Name="SelectedArticle" Value="_selectedArticle">
                <div class="top-row px-4">
                    @if (_selectedArticle != null)
                    {
                        <h3>
                            @_selectedSource.Title
                            >
                            @_selectedArticle.Title
                        </h3>
                    }
                    else if (_selectedFeed != null)
                    {
                        <h3>@_selectedFeed.Title</h3>
                    }
                    else if (_selectedSource != null)
                    {
                        <h3>
                            @_selectedSource.Title
                        </h3>
                    }
                </div>

                <div class="content px-4">
                    @Body
                </div>
            </CascadingValue>
        </CascadingValue>
    </div>
</div>
